@model IEnumerable<EventeApi.Core.DTOs.ReviewDto>
@{
    ViewData["Title"] = "Reviews";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Reviews Management</h1>
</div>

@if (ViewBag.Events != null && ViewBag.EventId == null)
{
    <div class="card shadow mb-4">
        <div class="card-body">
            <h5 class="card-title">Select Event to View Reviews</h5>
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-8">
                    <select name="eventId" class="form-select" required>
                        <option value="">-- Select an Event --</option>
                        @foreach (var evt in (IEnumerable<EventeApi.Core.DTOs.EventDto>)ViewBag.Events)
                        {
                            <option value="@evt.Id">@evt.Title - @evt.EventTime.ToString("yyyy-MM-dd")</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Load Reviews
                    </button>
                </div>
            </form>
        </div>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Reviews for Event #@ViewBag.EventId</h5>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.Id</td>
                                <td>@review.UserFullName</td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        @for (int i = review.Rating; i < 5; i++)
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    </span>
                                </td>
                                <td>@(string.IsNullOrEmpty(review.CommentText) ? "No comment" : review.CommentText)</td>
                                <td>@review.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@review.Id" asp-route-eventId="@review.EventId" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else if (ViewBag.EventId != null)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No reviews found for this event.
    </div>
}

