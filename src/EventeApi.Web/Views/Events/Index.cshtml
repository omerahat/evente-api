@model IEnumerable<EventeApi.Core.DTOs.EventDto>
@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Events Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Event
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th style="width: 80px;">Banner</th>
                            <th>Title</th>
                            <th>Organizer</th>
                            <th>Event Time</th>
                            <th>Location</th>
                            <th>Category</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model)
                        {
                            <tr>
                                <td>@evt.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(evt.BannerImageUrl))
                                    {
                                        <img src="@evt.BannerImageUrl" alt="Banner" class="img-thumbnail" style="max-width: 60px; max-height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted small"><i class="bi bi-image"></i></span>
                                    }
                                </td>
                                <td>@evt.Title</td>
                                <td>@evt.OrganizerName</td>
                                <td>@evt.EventTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@evt.LocationName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(evt.CategoryName))
                                    {
                                        <span class="badge bg-info">@evt.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@evt.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-info btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@evt.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No events found. <a asp-action="Create" class="alert-link">Create one now</a>.
    </div>
}

