@model EventeApi.Core.DTOs.EventDto
@{
    ViewData["Title"] = "Event Details";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Event Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.BannerImageUrl))
        {
            <div class="mb-4">
                <img src="@Model.BannerImageUrl" alt="Event Banner" class="img-fluid rounded shadow-sm" style="max-height: 300px; width: 100%; object-fit: cover;" />
            </div>
        }

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Organizer</dt>
                    <dd class="col-sm-8">@Model.OrganizerName</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Event Time</dt>
                    <dd class="col-sm-8">@Model.EventTime.ToString("MMMM dd, yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.LocationName</dd>

                    @if (Model.LocationLat.HasValue && Model.LocationLon.HasValue)
                    {
                        <dt class="col-sm-4">Coordinates</dt>
                        <dd class="col-sm-8">@Model.LocationLat.Value, @Model.LocationLon.Value</dd>
                    }

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <span class="badge bg-info">@Model.CategoryName</span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Created At</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Banner Image</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.BannerImageUrl))
                        {
                            <a href="@Model.BannerImageUrl" target="_blank" class="text-break">@Model.BannerImageUrl</a>
                        }
                        else
                        {
                            <span class="text-muted">No banner image</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?')">
                    <i class="bi bi-trash"></i> Delete Event
                </button>
            </form>
        </div>
    </div>
</div>

